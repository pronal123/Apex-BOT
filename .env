############################################
# Apex BOT 環境設定ファイル (.env)
############################################

# ==========================================
# 1. BOTモード設定
# ==========================================
# テストモードを有効にする (取引は実行されず、通知とログのみ行われます)
TEST_MODE=True
# マーケット情報 (銘柄リスト) の更新をスキップする (開発中の高速化用。通常はFalse)
SKIP_MARKET_UPDATE=False

# ==========================================
# 2. 取引所API設定 (MEXCの例)
# ==========================================
# 使用する取引所クライアント名 (mexc, binance, bybitなど)
EXCHANGE_CLIENT=mexc 
# APIキーとシークレットキー
# ※ テストモードでも認証情報が必要です（価格取得、残高確認のため）
MEXC_API_KEY="YOUR_MEXC_API_KEY"
MEXC_SECRET="YOUR_MEXC_SECRET_KEY"

# ==========================================
# 3. 通知設定 (Telegram)
# ==========================================
TELEGRAM_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID"

# ==========================================
# 4. 自動売買設定 (ロットサイズ)
# ==========================================
# USDT建てのベース取引サイズ (テストモードでも動的ロット計算に使用されます)
BASE_TRADE_SIZE_USDT=20.0

# ==========================================
# 5. ログアップロード設定 (オプション)
# ==========================================
# FTP/WebDAVなど、外部ログストレージを設定する場合は以下のコメントアウトを解除
# WEBSHARE_HOST="your.ftp.host"
# WEBSHARE_PORT=21
# WEBSHARE_USER="ftp_username"
# WEBSHARE_PASS="ftp_password"
